# Railway Environment Variables Example
# Copy environment variables ini ke Railway dashboard

# Application
APP_NAME="PKM Absensi"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta
APP_URL=https://your-app.railway.app

# IMPORTANT: Make sure APP_URL uses HTTPS (not http)
# This ensures assets (CSS/JS) are loaded correctly
ASSET_URL=https://your-app.railway.app

# Database (Railway PostgreSQL auto-injects DATABASE_URL)
# Jika pakai Railway database, hanya perlu DATABASE_URL (auto-set)
# DATABASE_URL akan otomatis tersedia

# Atau set manual:
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Session & Cache
# IMPORTANT: Use 'database' for SESSION_DRIVER on Railway
# File-based sessions don't persist on Railway's ephemeral filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
CACHE_STORE=database

# Optional: Mail Configuration
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Optional: Google Maps (untuk fitur lokasi)
GOOGLE_MAPS_API_KEY=

# Filament
FILAMENT_FILESYSTEM_DRIVER=local
